<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/forms.css">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <title>For Music</title>
    </head>
    <body>
        <!-- Beginning of Navigation -->
        <header>
            <nav class="header">
                <ul>
                    <!-- Navigation links -->
                    <li class="header-links"><a href="/"><img src="/images/icons8-headphones-24.png" alt="Headphones" width="40" height="40"></a></li>
                    <li class="header-right">
                        <ul>
                           <% if(!user) { %>
                                <li class="header-links"><a class="header-linksa" href="/users/login">Login</a></li>
                                <li class="header-links"><a class="header-linksa" href="/users/new">Sign up</a></li>
                          <%  } else { %>
                                <li class="header-links"><a class="header-linksa" href="/connections/new">New Connection</a></li>
                                <li class="header-links"><a class="header-linksa" href='/users/profile'>Profile</a></li>
                                <li class="header-links"><a class="header-linksa" href='/users/logout'>Logout</a></li>
                         <%   } %>
                        </ul>
                    </li>  
                </ul>
            </nav>
            <ul class="connections">
                <li class="connection-link"><a class="connection-linka" href="/connections">Connections</a></li>
                <% if (user) { %>
                    <li class="header-right">Welcome <%= username %>!</li>
            <%      } %>
            </ul>
        </header>

       <% if(errorMessages.length > 0) {
            errorMessages.forEach(message=> { %>
                <div class="error alert alert-warning alert-dismissible fade show" role="alert">
                    <%=message %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</button>
                    
                </div>
          <%  });
        } %>

        <% if(successMessages.length > 0) {
            successMessages.forEach(message=> { %>
                <div class="success alert alert-warning alert-dismissible fade show" role="alert">
                    <%=message %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</button>
                </div>
          <%  });
        } %>