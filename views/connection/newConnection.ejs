<%- include('../partials/header.ejs')%>
        <!-- Beginning of Main Content -->
        <main class="form-container">
            <form class="submission-form" action="/connections" method="POST">
                <div>
                    <label for="category">Category</label>
                    <input type="text" name="category" id="category" placeholder="i.e. 'learn' or 'listenrecord'" required>
                </div>
                <div>
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" placeholder="title" required>
                </div>
                <div>
                    <label for="host">Host</label>
                    <input type="text" name="host" id="host" placeholder="host" required>
                </div>
                <div>
                    <label for="details">Details</label>
                    <textarea name="details" id="details" placeholder="description" minlength="10" required></textarea>
                </div>
                <div>
                    <label for="where">Where</label>
                    <input type="text" name="location" id="where" placeholder="location" required>
                </div>
                <div>
                    <label for="when">When</label>
                    <input type="date" name="date" id="when" required>
                </div>
                <div>
                    <label for="start">Start</label>
                    <input type="time" name="start" id="start" value="12:00:00" required>
                </div>
                <div>
                    <label for="end">End</label>
                    <input type="time" name="end" id="end" value="11:59:00" required>
                </div>
                <div>
                    <label for="image">Image URL</label>
                    <input type="text" name="image" id="image" placeholder="imageURL" required>
                </div>
                <button type="submit" id="create-connect">Create Connection</button>
            </form>
        </main>
        <%- include('../partials/footer.ejs')%>