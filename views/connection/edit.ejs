<%- include('../partials/header.ejs')%>
        <!-- Beginning of Main Content -->
        <main class="form-container">
            <form class="submission-form" method="POST" action="/connections/<%= connection.id %>?_method=PUT">
                <div>
                    <label for="category">Category</label>
                    <input type="text" name="category" id="category" value="<%= connection.category %>" required>
                </div>
                <div>
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" value="<%= connection.title %>" required>
                </div>
                <div>
                    <label for="host">Host</label>
                    <input type="text" name="host" id="host" value="<%= connection.host %>" required>
                </div>
                <div>
                    <label for="details">Details</label>
                    <textarea name="details" id="details" minlength="10" required><%= connection.details %></textarea>
                </div>
                <div>
                    <label for="where">Where</label>
                    <input type="text" name="location" id="where" value="<%= connection.location %>" required>
                </div>
                <div>
                    <label for="when">When</label>
                    <input type="date" name="date" id="when" value="<%= connection.date %>" required>
                </div>
                <div>
                    <label for="start">Start</label>
                    <input type="time" name="start" id="start" value="<%= connection.start %>" required>
                </div>
                <div>
                    <label for="end">End</label>
                    <input type="time" name="end" id="end" value="<%= connection.end %>" required>
                </div>
                <div>
                    <label for="image">Image URL</label>
                    <input type="text" name="image" id="image" value="<%= connection.image %>" required>
                </div>
                <button type="submit" id="create-connect">Submit</button>
            </form>
        </main>
        <%- include('../partials/footer.ejs')%>